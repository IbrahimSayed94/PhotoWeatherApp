<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:gravity="center"
    tools:context="com.example.ibrahim.photoweatherapp.View.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/big_spacing">

        <Button
            android:id="@+id/btn_add_photo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/outer_spacing"
            android:gravity="center"
            android:background="@drawable/custom_home_buttons"
            android:drawableStart="@drawable/ic_add_photo"
            android:drawableLeft="@drawable/ic_add_photo"
            android:paddingLeft="@dimen/big_spacing"
            android:paddingRight="@dimen/big_spacing"
            android:stateListAnimator="@null"
            android:text="@string/addphoto"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_photos_history"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_home_buttons"
            android:drawableStart="@drawable/ic_photo_history"
            android:drawableLeft="@drawable/ic_photo_history"
            android:paddingLeft="@dimen/big_spacing"
            android:paddingRight="@dimen/big_spacing"
            android:stateListAnimator="@null"
            android:text="@string/photoshistory"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>
